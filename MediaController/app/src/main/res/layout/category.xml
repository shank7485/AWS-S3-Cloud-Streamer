<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:contextClickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movies"
        android:id="@+id/movies"
        android:background="#000000"
        android:textColor="#ffffff"
        android:backgroundTint="#1b8127"
        android:layout_above="@+id/music"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music"
        android:id="@+id/music"
        android:background="#000000"
        android:textColor="#ffffff"
        android:backgroundTint="#516bdd"
        android:layout_above="@+id/others"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Others"
        android:id="@+id/others"
        android:textColor="#ffffff"
        android:background="#000000"
        android:backgroundTint="#b35050"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="145dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Media Categories"
        android:id="@+id/MediaCategories"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:id="@+id/categories"
        android:layout_above="@+id/MediaCategories"
        android:layout_centerHorizontal="true" />
</RelativeLayout>